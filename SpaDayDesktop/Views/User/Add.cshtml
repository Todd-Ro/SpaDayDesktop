@{
}

@using SpaDayDesktop.ViewModels;
@model AddUserViewModel;

<!--User fields:
        public string Username { get; set; }
        public string Email { get; set; }
        public string Password { get; set; }
-->
<!--AddUserViewModel also has this field:
    public string VerifyPassword { get; set; }
-->

<form method='post'>
    <div class='form-group'>
        <label asp-for='Username'>Username: </label>
        <input asp-for='Username' type='text' id='Username' 
        value=@ViewBag.username />
        <span asp-validation-for='Username'></span>
    </div>
    <div class='form-group'>
        <label asp-for='Email'>E-mail Address: </label>
        <input asp-for='Email' type='email' id='Email' 
        value=@ViewBag.email />
        <span asp-validation-for='Email'></span>
    </div>
    <div class='form-group'>
        <label asp-for='Password'>Password: </label>
        <input asp-for='Password' type='password' id='Password' />
        <span asp-validation-for='Password'></span>
    </div>
    <div class='form-group'>
        <label asp-for='VerifyPassword'>Verify Password: </label>
        <input asp-for='VerifyPassword' type='password' id='VerifyPassword' />
        <span asp-validation-for='VerifyPassword'></span>
    </div>
    <input type='submit' value='Submit User Profile' />
</form>

@if(!(ViewBag.error is null)) {
    <br />
    <p style="color:red">@ViewBag.error</p>
}